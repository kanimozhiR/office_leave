<%= render "layouts/adminstyle" %>
<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Empid</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Doj</th>
      <th>Designation</th>
      <th>Role</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Encashed days</th>
      <th>Separation date</th>
      <th>Manager name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.empid %></td>
        <td><%= employee.age %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.dob %></td>
        <td><%= employee.doj %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.role %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.email_id %></td>
        <td><%= employee.encashed_days %></td>
        <td><%= employee.separation_date %></td>
        <td><%= employee.manager_name %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @employees, :window =>4 %>

