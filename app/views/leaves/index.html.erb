<p id="notice"><%= notice %></p>

<h1>Leaves</h1>

<table>
  <thead>
    <tr>
      <th>Empid</th>
      <th>Requester emp</th>
      <th>Start date</th>
      <th>End date</th>
      <th>No of days</th>
      <th>Leave type</th>
      <th>Action date</th>
      <th>Request remarks</th>
      <th>Action remarks</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaves.each do |leafe| %>
      <tr>
        <td><%= leafe.empid %></td>
        <td><%= leafe.requester_emp_id %></td>
        <td><%= leafe.start_date %></td>
        <td><%= leafe.end_date %></td>
        <td><%= leafe.no_of_days %></td>
        <td><%= leafe.leave_type %></td>
        <td><%= leafe.action_date %></td>
        <td><%= leafe.request_remarks %></td>
        <td><%= leafe.action_remarks %></td>
        <td><%= leafe.status %></td>
        <td><%= link_to 'Show', leafe %></td>
        <td><%= link_to 'Edit', edit_leafe_path(leafe) %></td>
        <td><%= link_to 'Destroy', leafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

